<%= form_for [:admin, @event_venue] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @event_venue,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :venue_name -%>
    <%= f.text_field :venue_name, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :venue_address -%>
    <%= f.text_field :venue_address  -%>
  </div>
  
  <div class='field'>
    <%= f.label :venue_calendar_color -%>
    <%= f.text_field :venue_calendar_color  -%>
  </div>
 
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.event_venues.venue'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @event_venue.venue_name)
              } %>
<% end -%>
